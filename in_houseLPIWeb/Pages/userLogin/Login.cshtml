@page
@model in_houseLPIWeb.Pages.userLogin.LoginModel
@{
    ViewData["Title"] = "Login Page";
}

<partial name="_Notification" />

<div class="container-fluid d-flex flex-grow-1 justify-content-center">
    <form method="post" asp-page-handler="LoginUser">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Login form</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Logins.Name"></label>
                <input asp-for="Logins.Name" class="form-control" />
                <span asp-validation-for="Logins.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Logins.Password"></label>
                <input asp-for="Logins.Password" class="form-control" type="password" />
                <span asp-validation-for="Logins.Password" class="text-danger"></span>
                <a class="btn btn-link text-decoration-none p-0 float-right" asp-page="/userLogin/userReset">forget password?</a>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input type="checkbox" asp-for="Logins.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Logins.RememberMe"></label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Login</button>
            <a data-toggle="modal" data-target="#regUserModal" class="btn btn-secondary text-light" style="width: 150px;">
                Sign up
            </a>
        </div>
    </form>
</div>

<div class="container">
    @await Html.PartialAsync("userRegister_", ViewData)
</div>
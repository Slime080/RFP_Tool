@model in_houseLPIWeb.Pages.adminSetup.admStoreEntity_IndexModel

<div class="modal fade" id="addEntityModal" tabindex="-1" role="dialog" aria-labelledby="addEntityModalLabel" aria-hidden="true">
    <!-- The id is used in calling the modal dialog -->
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEntityModallLabel">Add New Type of Charge</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Add">
                    <!-- Container Type of Charge -->
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-4">
                                <label asp-for="Entities.EntityCode"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Entities.EntityCode" class="form-control" type="text" />
                            </div>
                        </div>
                        <span asp-validation-for="Entities.EntityCode" class="text-danger"></span>
                    </div>
                    <!-- Container for description -->
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-4">
                                <label asp-for="Entities.EntityName"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Entities.EntityName" class="form-control" type="text" />
                            </div>
                        </div>
                        <span asp-validation-for="Entities.EntityName" class="text-danger"></span>
                    </div>
                    <!-- Container for Toggle switch for Payee Status -->
                    <div class="mb-3">
                        <label class="switch">
                            <input type="checkbox" asp-for="Entities.IsActive" id="toggleSwitch" checked>
                            <span class="slider round"></span>
                        </label>
                        <label class="form-check-label px-3" for="toggleSwitch">Active</label>
                    </div>

                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
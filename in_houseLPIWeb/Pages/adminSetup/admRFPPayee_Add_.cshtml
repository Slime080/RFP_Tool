@model in_houseLPIWeb.Pages.adminSetup.admRFPPayee_IndexModel

<div class="modal fade" id="addPayeeModal" tabindex="-1" role="dialog" aria-labelledby="addPayeeModalLabel" aria-hidden="true">
    <!-- The id is used in calling the modal dialog -->
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPayeeModalLabel">Add New Payee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Add">
                    <!-- Container Payee Name -->
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-4">
                                <label asp-for="Payees.PayeeName"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Payees.PayeeName" class="form-control text-uppercase" />
                            </div>
                        </div>
                        <span asp-validation-for="Payees.PayeeName" class="text-danger"></span>
                    </div>
                    <!-- Container for Payee Address -->
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-4">
                                <label asp-for="Payees.PayeeAddress"></label>
                            </div>
                            <div class="col-8">
                                <textarea asp-for="Payees.PayeeAddress" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                        <span asp-validation-for="Payees.PayeeAddress" class="text-danger"></span>
                    </div>
                    <!-- Container for Department -->
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-4">
                                <label asp-for="Payees.PayeeDepartment"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Payees.PayeeDepartment" class="form-control" value="@Model.udept" readonly/>

                                @*<select asp-for="Payees.PayeeDepartment" asp-items="@Model.Departments" class="form-control">
                                    <option value="">- Select Department -</option>
                                </select>*@
                            </div>
                        </div>
                        <span asp-validation-for="Payees.PayeeDepartment" class="text-danger"></span>
                    </div>
                    <!-- Container for Toggle switch for Payee Status -->
                    <div class="mb-3">
                        <label class="switch">
                            <input type="checkbox" asp-for="Payees.IsActive" id="toggleSwitch" checked>
                            <span class="slider round"></span>
                        </label>
                        <label class="form-check-label px-3" for="toggleSwitch">Active</label>
                    </div>

                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
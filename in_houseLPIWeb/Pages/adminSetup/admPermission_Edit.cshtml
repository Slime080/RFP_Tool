@page
@model in_houseLPIWeb.Pages.adminSetup.admPermission_EditModel
@{
    ViewData["Title"] = "User Permission Dashboard";
}

<partial name="_Notification" />

<form method="post">
    <div class="border p-3 mt-2">
        <h2 class="text-primary">Edit User Permission</h2>
        <div class="hidden-fields" hidden>
            <input class="form-control" value="@Model.userId" id="userID" name="userID" readonly hidden /> @*asp-for="permissionX.UserId"*@
            <div class="d-flex align-items-center">
                <input class="form-control" value="@Model.userLevel" id="uLevel" readonly hidden />
                <input class="form-control" value="@Model.currentUlvl" id="currentLevel" readonly hidden />
            </div>
            <input class="form-control" asp-for="permissionX.AddedBy" readonly hidden>
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <div class="d-flex align-items-center">
                <label class="mt-2" for="uName">Name</label>&nbsp;:&nbsp;
                <input readonly id="uName" value="@Model.userName" class="form-control-plaintext" />
            </div>
        </div>
        <div class="mb-2">
            <div class="d-flex align-items-center">
                <label class="mt-2" for="uRole">Role</label>&nbsp;:&nbsp;
                <input readonly id="uRole" class="form-control-plaintext" value="@Model.userRole" />
            </div>
        </div>

        <div class="row">
            <div class="col-3">

                <div class="checkbox-container">
                    <label class="container-label font-weight-bold">RFP Pages</label>
                    <div class="row mt-2">
                        <div class="col-md-9">
                            <label class="form-check-label font-weight-bold pl-2" for="rfp_dashCB">RFP</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFP_Dash" id="rfp_dashCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="rfp_addCB">Add</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFP_Add" id="rfp_addCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="rfp_archiveCB">Archive</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFP_Archive" id="rfp_archiveCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="rfp_printCB">Print</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFP_Print" id="rfp_printCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="rfp_viewCB">View</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFP_View" id="rfp_viewCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-3">

                <div class="checkbox-container">
                    <label class="container-label font-weight-bold">RFP Utilities</label>
                    @* ================================ This is for RFP utility checkboxes ================================ *@
                    <div class="row mt-2">
                        <div class="col-md-9">
                            <label class="form-check-label font-weight-bold pl-2" for="rfpUtil_dashCB">RFP Utility</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFPutil_Dash" id="rfpUtil_dashCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    @* ================================ This is for Payee checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="payee_indexCB">Payee</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="payee_addCB">Add</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFPutil_Payee_Index" id="payee_addCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    @* ================================ This is for Type of Charge checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="toc_indexCB">Type of Charge</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="toc_addCB">Add</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.RFPutil_TOC_Index" id="toc_addCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-3">

                <div class="checkbox-container">
                    <label class="container-label font-weight-bold">Utility Page</label>
                    @* ================================ This is for Store utility checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="util_stoIndexCB">Stores</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_stoAddCB">Add</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_Store_Index" id="util_stoAddCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_stoCloseCB">Close</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_Store_Archive" id="util_stoCloseCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    @* ================================ This is for Store entity checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="util_entIndexCB">Store Entity (for Admin)</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_entAddCB">Add</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_StoreEnt_Index" id="util_entAddCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    @* ================================ This is for Store type checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="util_typeIndexCB">Store Type (for Admin)</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_typeAddCB">Add</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_StoreType_Index" id="util_typeAddCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    @* ================================ This is for users checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="util_userCB">Users</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_userEditCB">Edit</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_User_Edit" id="util_userEditCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_permissionCB">Permission</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_Permission" id="util_permissionCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    @* ================================ This is for department checkboxes ================================ *@
                    <div class="mt-2">
                        <label class="form-check-label font-weight-bold pl-2" for="util_depCB">Department</label>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-3" for="util_depEditCB">Edit</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Util_UserDep_Edit" id="util_depEditCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-3">

                <div class="checkbox-container">
                    <label class="container-label font-weight-bold">General Pages</label>
                    <div class="row mt-2">
                        <div class="col-md-9">
                            <label class="form-check-label pl-2 font-weight-bold" for="indexCB">Index</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Index" id="indexCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-2 font-weight-bold" for="archiveCB">Archive Page</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.Archive" id="archiveCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <label class="form-check-label pl-2 font-weight-bold" for="ifc_indexCB">IFC Summary</label>
                        </div>
                        <div class="col-md-3">
                            <label class="custom-checkbox">
                                <input type="checkbox" asp-for="permissionX.IFC_Index" id="ifc_indexCB" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-page="/adminSetup/admUser_Index" class="btn btn-outline-secondary" style="width:150px;">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/permissionCBevent.js"></script>
}
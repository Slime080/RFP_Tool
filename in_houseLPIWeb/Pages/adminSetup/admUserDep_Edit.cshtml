@page
@model in_houseLPIWeb.Pages.adminSetup.admUserDep_EditModel
@{
    ViewData["Title"] = "Edit Department detail";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Department</h2>
            <hr />
        </div>
        <input asp-for="Departmentx.Id" class="form-control" hidden />
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Departmentx.DeptName"></label>
            <input asp-for="Departmentx.DeptName" class="form-control" readonly />
            <span asp-validation-for="Departmentx.DeptName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Departmentx.DeptHead"></label>
            <input asp-for="Departmentx.DeptHead" class="form-control" />
            <span asp-validation-for="Departmentx.DeptHead" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="/adminSetup/admUserDep_Index" class="btn btn-outline-secondary" style="width:150px;">Cancel</a>
    </div>
</form>